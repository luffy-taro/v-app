---
interface Props {
  tags: { name: string; count: number }[];
  totalCount: number;
  videoIds?: string[];
  currentTag?: string;
}

const { tags, totalCount, videoIds = [], currentTag = '' } = Astro.props;
---

<aside class="hidden md:flex flex-col w-80 h-full bg-card-light dark:bg-card-dark border-r-2 border-border-light dark:border-border-dark shrink-0 z-20">
  <div class="p-6 pb-5 border-b-2 border-border-light dark:border-border-dark">
    <a href="/" class="block group">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 border-2 border-text-primary dark:border-stone-300 flex items-center justify-center group-hover:bg-primary group-hover:border-primary transition-all">
          <svg class="w-4 h-4 text-text-primary dark:text-stone-300 group-hover:text-background-dark ml-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-xl font-mono font-bold text-text-primary dark:text-stone-100 tracking-tight group-hover:text-primary transition-colors">v<span class="text-stone-400 dark:text-stone-500">/</span></h1>
          <p class="text-[9px] font-mono text-text-secondary dark:text-stone-500 uppercase tracking-wider">curated talks</p>
        </div>
      </div>
    </a>
  </div>

  <div class="px-6 py-5 space-y-4">
    <button
      id="feeling-lucky"
      class="w-full flex items-center justify-center gap-2 py-2.5 border-2 border-primary bg-primary hover:bg-primary-hover text-sm font-mono font-semibold text-background-dark transition-all group"
    >
      <span class="material-symbols-outlined text-[16px]">casino</span>
      <span>Feeling Lucky</span>
    </button>

    <div class="relative group">
      <span class="absolute left-0 top-1/2 -translate-y-1/2 text-text-secondary dark:text-stone-500 group-focus-within:text-primary transition-colors">
        <span class="material-symbols-outlined text-[18px]">search</span>
      </span>
      <input
        id="tag-search"
        class="w-full bg-transparent border-b-2 border-border-light dark:border-border-dark py-2 pl-7 pr-2 text-sm font-mono text-text-primary dark:text-stone-200 placeholder:text-stone-400 placeholder:font-mono focus:outline-none focus:border-primary focus:ring-0 transition-all"
        placeholder="find by tag..."
        type="text"
      />
    </div>
  </div>

  <div class="flex-1 overflow-y-auto px-6 py-2">
    <h3 class="text-[10px] font-mono font-bold text-stone-400 dark:text-stone-600 uppercase tracking-wider mb-3 sticky top-0 bg-card-light dark:bg-card-dark py-2 z-10">Browse Tags</h3>
    <ul id="tag-list" class="space-y-0.5 font-mono">
      <li>
        <a
          href="/"
          data-tag=""
          class={`tag-filter-btn w-full flex items-center justify-between group py-2 px-2 -mx-2 transition-colors ${currentTag === '' ? 'bg-primary/10 dark:bg-primary/20 text-primary border-l-2 border-primary' : 'hover:bg-stone-100 dark:hover:bg-stone-800/50 text-text-secondary dark:text-stone-400 hover:text-text-primary dark:hover:text-stone-200 border-l-2 border-transparent'}`}
        >
          <span class="text-sm font-medium">#all</span>
          <span class={`text-[10px] font-mono text-stone-500 dark:text-stone-500 ${currentTag === '' ? '' : 'opacity-0 group-hover:opacity-100'}`}>{totalCount}</span>
        </a>
      </li>
      {tags.map(tag => (
        <li class="tag-item" data-tag={tag.name.toLowerCase()}>
          <a
            href={`/?tag=${tag.name.toLowerCase()}`}
            data-tag={tag.name.toLowerCase()}
            class={`tag-filter-btn w-full flex items-center justify-between group py-2 px-2 -mx-2 transition-colors ${currentTag === tag.name.toLowerCase() ? 'bg-primary/10 dark:bg-primary/20 text-primary border-l-2 border-primary' : 'hover:bg-stone-100 dark:hover:bg-stone-800/50 text-text-secondary dark:text-stone-400 hover:text-text-primary dark:hover:text-stone-200 border-l-2 border-transparent'}`}
          >
            <span class="text-sm">#{tag.name}</span>
            <span class={`tag-count text-[10px] font-mono text-stone-500 dark:text-stone-500 ${currentTag === tag.name.toLowerCase() ? '' : 'opacity-0 group-hover:opacity-100'} transition-opacity`}>{tag.count}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <div class="p-6 border-t-2 border-border-light dark:border-border-dark mt-auto bg-card-light dark:bg-card-dark">
    <div class="flex items-center gap-2 text-stone-400 dark:text-stone-500 mb-2">
      <span class="material-symbols-outlined text-[14px]">history</span>
      <span class="text-[9px] uppercase tracking-wider font-mono font-bold">Last Viewed</span>
    </div>
    <a id="last-viewed" class="block truncate text-xs font-mono text-text-secondary dark:text-stone-400 hover:text-primary transition-colors" href="#">
      â€”
    </a>
    <div class="mt-5 pt-3 border-t-2 border-dotted border-border-light dark:border-border-dark flex justify-between items-center opacity-80">
      <div class="flex items-center gap-2">
        <span class="w-1.5 h-1.5 bg-emerald-500"></span>
        <span class="text-[9px] font-mono font-bold text-stone-400 dark:text-stone-500 uppercase tracking-wider">Last Built</span>
      </div>
      <span id="build-time" class="text-[9px] font-mono text-stone-500 dark:text-stone-600"></span>
    </div>
    <a
      href="https://github.com/luffy-taro/v-app"
      target="_blank"
      rel="noopener noreferrer"
      class="mt-4 flex items-center gap-2 text-stone-400 dark:text-stone-500 hover:text-primary transition-colors group"
    >
      <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor">
