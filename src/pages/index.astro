---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import VideoCard from '../components/VideoCard.astro';
import { loadTalks } from '../lib/talks';
import { extractVideoId } from '../lib/youtube';

// Load talks from all YAML files in data/
const talks = loadTalks();

// Build tag list with counts
const tagCounts = new Map<string, number>();
talks.forEach(talk => {
  talk.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});
const tags = Array.from(tagCounts.entries())
  .map(([name, count]) => ({ name, count }))
  .sort((a, b) => b.count - a.count);

// Build video IDs for feeling lucky
const videoIds = talks.map(t => extractVideoId(t.url)).filter(Boolean);
---

<Layout title="v/ | Curated Talks">
  <Sidebar tags={tags} totalCount={talks.length} videoIds={videoIds} />

  <main class="flex-1 flex flex-col h-full overflow-hidden relative bg-background-light dark:bg-background-dark">
    <!-- Mobile header -->
    <header class="md:hidden flex items-center justify-between px-6 py-4 bg-card-light dark:bg-card-dark border-b-2 border-border-light dark:border-border-dark z-10 sticky top-0">
      <div class="flex items-center gap-2">
        <div class="w-6 h-6 border-2 border-text-primary dark:border-stone-300 flex items-center justify-center">
          <svg class="w-3 h-3 text-text-primary dark:text-stone-300 ml-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <h1 class="text-lg font-mono font-bold text-text-primary dark:text-white">v<span class="text-stone-400 dark:text-stone-500">/</span></h1>
      </div>
      <button id="mobile-menu-btn" class="text-stone-500 dark:text-stone-400">
        <span class="material-symbols-outlined">menu</span>
      </button>
    </header>

    <div class="flex-1 overflow-y-auto">
      <div class="max-w-[1920px] mx-auto px-6 md:px-12 py-8 md:py-12">
        <!-- Search and dark mode toggle -->
        <div class="flex flex-col md:flex-row justify-between items-center gap-6 mb-10">
          <div class="relative w-full md:w-96 group">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary dark:text-stone-500 group-focus-within:text-primary transition-colors">
              <span class="material-symbols-outlined text-[18px]">search</span>
            </span>
            <input
              id="video-search"
              class="w-full bg-card-light dark:bg-card-dark border-2 border-border-light dark:border-border-dark py-2.5 pl-10 pr-4 text-sm font-mono text-text-primary dark:text-stone-200 placeholder-stone-400 dark:placeholder-stone-600 focus:outline-none focus:border-primary focus:ring-0 transition-all"
              placeholder="search videos..."
              type="text"
            />
          </div>
          <div class="flex items-center gap-3">
            <span class="text-[10px] font-mono font-semibold text-stone-400 dark:text-stone-500 uppercase tracking-wider">light</span>
            <button
              id="dark-mode-toggle"
              class="bg-border-light dark:bg-primary relative inline-flex h-6 w-12 flex-shrink-0 cursor-pointer border-2 border-border-light dark:border-primary transition-colors duration-200 ease-in-out focus:outline-none"
              title="Toggle dark mode"
            >
              <span aria-hidden="true" class="translate-x-0 dark:translate-x-6 pointer-events-none inline-block h-5 w-5 transform bg-text-primary dark:bg-background-dark ring-0 transition duration-200 ease-in-out"></span>
            </button>
            <span class="text-[10px] font-mono font-semibold text-stone-400 dark:text-primary uppercase tracking-wider">dark</span>
          </div>
        </div>

        <!-- Section header -->
        <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-8 pb-4 border-b-2 border-border-light dark:border-border-dark">
          <div>
            <h2 id="section-title" class="text-2xl font-mono font-bold text-text-primary dark:text-stone-100">
              All Videos
            </h2>
            <p class="text-xs text-stone-500 dark:text-stone-400 mt-1.5 font-mono">
              viewing <span id="visible-count">{talks.length}</span> items
            </p>
          </div>
          <div class="flex items-center gap-4 mt-4 sm:mt-0">
            <button id="sort-btn" class="text-[10px] font-mono font-semibold text-stone-400 dark:text-stone-500 hover:text-primary uppercase tracking-wider transition-colors flex items-center gap-1">
              sort <span id="sort-icon" class="material-symbols-outlined text-[14px] transition-transform">arrow_drop_down</span>
            </button>
            <div class="flex gap-2 text-stone-400 border-l-2 border-border-light dark:border-border-dark pl-4">
              <button id="grid-view-btn" class="text-text-primary dark:text-white transition-colors p-1 border-2 border-transparent hover:border-primary" title="Grid view">
                <span class="material-symbols-outlined text-[18px]">grid_view</span>
              </button>
              <button id="list-view-btn" class="text-stone-400 hover:text-text-primary dark:hover:text-white transition-colors p-1 border-2 border-transparent hover:border-primary" title="List view">
                <span class="material-symbols-outlined text-[18px]">view_list</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Video grid -->
        <div id="video-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-6">
          {talks.map(talk => (
            <div class="video-item" data-title={talk.title.toLowerCase()} data-author={(talk.author || '').toLowerCase()} data-tags={talk.tags.join(',').toLowerCase()} data-year={talk.year || 0}>
              <VideoCard talk={talk} />
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>

  <script>
    // Dark mode toggle
    const toggle = document.getElementById('dark-mode-toggle');
    toggle?.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
      localStorage.setItem('darkMode', document.documentElement.classList.contains('dark') ? 'true' : 'false');
    });

    // Restore dark mode preference
    if (localStorage.getItem('darkMode') === 'false') {
      document.documentElement.classList.remove('dark');
    }

    // Video search and tag filter state
    const videoSearch = document.getElementById('video-search') as HTMLInputElement;
    const videoItems = document.querySelectorAll('.video-item');
    const visibleCount = document.getElementById('visible-count');
    const sectionTitle = document.getElementById('section-title');

    // Read tag from URL params
    const urlParams = new URLSearchParams(window.location.search);
    let currentTag = urlParams.get('tag') || '';
    let currentSearch = '';

    function updateVideoVisibility() {
      let count = 0;
      videoItems.forEach(item => {
        const el = item as HTMLElement;
        const title = el.getAttribute('data-title') || '';
        const author = el.getAttribute('data-author') || '';
        const tags = el.getAttribute('data-tags') || '';

        const matchesSearch = !currentSearch ||
          title.includes(currentSearch) ||
          author.includes(currentSearch);

        const matchesTag = !currentTag ||
          tags.split(',').includes(currentTag);

        const visible = matchesSearch && matchesTag;
        el.style.display = visible ? '' : 'none';
        if (visible) count++;
      });

      if (visibleCount) visibleCount.textContent = String(count);

      // Update section title based on current tag
      if (sectionTitle) {
        sectionTitle.textContent = currentTag ? `#${currentTag}` : 'All Videos';
      }
    }

    // Apply initial filter from URL
    updateVideoVisibility();

    videoSearch?.addEventListener('input', (e) => {
      currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
      updateVideoVisibility();
    });

    // Hydrate video cards with localStorage data
    function formatDuration(seconds: number): string {
      const h = Math.floor(seconds / 3600);
      const m = Math.floor((seconds % 3600) / 60);
      const s = Math.floor(seconds % 60);
      if (h > 0) {
        return `${h}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
      }
      return `${m}:${s.toString().padStart(2, '0')}`;
    }

    function hydrateVideoCards() {
      const metadata = JSON.parse(localStorage.getItem('videoMetadata') || '{}');

      // Update duration badges
      document.querySelectorAll('.duration-badge').forEach(badge => {
        const videoId = badge.getAttribute('data-video-id');
        if (videoId && metadata[videoId]?.duration) {
          badge.textContent = formatDuration(metadata[videoId].duration);
          badge.classList.remove('hidden');
        }
      });

      // Update progress bars
      document.querySelectorAll('.progress-container').forEach(container => {
        const videoId = container.getAttribute('data-video-id');
        if (videoId && metadata[videoId]?.progress && metadata[videoId]?.duration) {
          const progress = (metadata[videoId].progress / metadata[videoId].duration) * 100;
          const bar = container.querySelector('.progress-bar') as HTMLElement;
          if (bar) {
            bar.style.width = `${Math.min(progress, 100)}%`;
            container.classList.remove('hidden');
          }
        }
      });
    }

    // View toggle (grid/list)
    const videoGrid = document.getElementById('video-grid');
    const gridViewBtn = document.getElementById('grid-view-btn');
    const listViewBtn = document.getElementById('list-view-btn');
    const gridClasses = 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-6';
    const listClasses = 'flex flex-col gap-5';

    function setView(view: 'grid' | 'list') {
      if (!videoGrid) return;

      // Update grid classes
      videoGrid.className = view === 'grid' ? gridClasses : listClasses;

      // Update video items for list view
      videoItems.forEach(item => {
        const el = item as HTMLElement;
        if (view === 'list') {
          el.classList.add('list-view-item');
        } else {
          el.classList.remove('list-view-item');
        }
      });

      // Update button styles
      if (gridViewBtn && listViewBtn) {
        if (view === 'grid') {
          gridViewBtn.classList.add('text-text-primary', 'dark:text-white');
          gridViewBtn.classList.remove('text-stone-400');
          listViewBtn.classList.remove('text-text-primary', 'dark:text-white');
          listViewBtn.classList.add('text-stone-400');
        } else {
          listViewBtn.classList.add('text-text-primary', 'dark:text-white');
          listViewBtn.classList.remove('text-stone-400');
          gridViewBtn.classList.remove('text-text-primary', 'dark:text-white');
          gridViewBtn.classList.add('text-stone-400');
        }
      }

      localStorage.setItem('videoView', view);
    }

    gridViewBtn?.addEventListener('click', () => setView('grid'));
    listViewBtn?.addEventListener('click', () => setView('list'));

    // Restore view preference
    const savedView = localStorage.getItem('videoView') as 'grid' | 'list' | null;
    if (savedView) setView(savedView);

    // Sort functionality
    const sortBtn = document.getElementById('sort-btn');
    const sortIcon = document.getElementById('sort-icon');
    let sortDirection: 'desc' | 'asc' = 'desc'; // newest first by default

    function sortVideos() {
      if (!videoGrid) return;

      const items = Array.from(videoItems) as HTMLElement[];
      items.sort((a, b) => {
        const yearA = parseInt(a.getAttribute('data-year') || '0');
        const yearB = parseInt(b.getAttribute('data-year') || '0');
        return sortDirection === 'desc' ? yearB - yearA : yearA - yearB;
      });

      // Re-append in sorted order
      items.forEach(item => videoGrid.appendChild(item));

      // Update icon rotation
      if (sortIcon) {
        sortIcon.style.transform = sortDirection === 'asc' ? 'rotate(180deg)' : '';
      }

      localStorage.setItem('videoSortDirection', sortDirection);
    }

    sortBtn?.addEventListener('click', () => {
      sortDirection = sortDirection === 'desc' ? 'asc' : 'desc';
      sortVideos();
    });

    // Restore sort preference
    const savedSort = localStorage.getItem('videoSortDirection') as 'desc' | 'asc' | null;
    if (savedSort) {
      sortDirection = savedSort;
      sortVideos();
    }

    hydrateVideoCards();

    // Tag expand functionality
    document.querySelectorAll('.tag-expand-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const container = btn.closest('.tag-container');
        if (!container) return;

        const hiddenTags = container.querySelectorAll('.tag-hidden') as NodeListOf<HTMLElement>;
        const isExpanded = btn.getAttribute('data-expanded') === 'true';

        if (isExpanded) {
          // Collapse
          hiddenTags.forEach(tag => tag.style.display = 'none');
          const totalTags = parseInt(container.getAttribute('data-total-tags') || '0');
          btn.textContent = `+${totalTags - 2}`;
          btn.setAttribute('data-expanded', 'false');
        } else {
          // Expand
          hiddenTags.forEach(tag => tag.style.display = 'inline-block');
          btn.textContent = 'âˆ’';
          btn.setAttribute('data-expanded', 'true');
        }
      });
    });
  </script>
</Layout>
