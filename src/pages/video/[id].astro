---
import fs from 'node:fs';
import yaml from 'js-yaml';
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import type { Talk } from '../../lib/types';
import { extractVideoId } from '../../lib/youtube';

// Load talks from YAML
const talksFile = fs.readFileSync('data/talks.yaml', 'utf8');
const talks = yaml.load(talksFile) as Talk[];

// Generate static paths for all videos
export function getStaticPaths() {
  const talksFile = fs.readFileSync('data/talks.yaml', 'utf8');
  const talks = yaml.load(talksFile) as Array<{ url: string }>;

  return talks.map(talk => {
    const id = talk.url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([\w-]+)/)?.[1];
    return { params: { id } };
  }).filter(p => p.params.id);
}

const { id } = Astro.params;

// Find the talk by video ID
const talk = talks.find(t => extractVideoId(t.url) === id);

if (!talk) {
  return Astro.redirect('/');
}

// Build tag list with counts for sidebar
const tagCounts = new Map<string, number>();
talks.forEach(t => {
  t.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});
const tags = Array.from(tagCounts.entries())
  .map(([name, count]) => ({ name, count }))
  .sort((a, b) => b.count - a.count);

// Build video IDs for feeling lucky
const videoIds = talks.map(t => extractVideoId(t.url)).filter(Boolean) as string[];

// Giscus configuration from environment variables
const giscusConfig = {
  repo: import.meta.env.PUBLIC_GISCUS_REPO || '',
  repoId: import.meta.env.PUBLIC_GISCUS_REPO_ID || '',
  category: import.meta.env.PUBLIC_GISCUS_CATEGORY || 'Video Discussions',
  categoryId: import.meta.env.PUBLIC_GISCUS_CATEGORY_ID || '',
};
---

<Layout title={`${talk.title} | v/`}>
  <Sidebar tags={tags} totalCount={talks.length} videoIds={videoIds} />

  <main class="flex-1 flex flex-col h-full overflow-hidden relative bg-background-light dark:bg-background-dark">
    <!-- Mobile header -->
    <header class="md:hidden flex items-center justify-between px-6 py-4 bg-card-light/95 dark:bg-card-dark/95 backdrop-blur-sm border-b border-border-light dark:border-border-dark z-10 sticky top-0">
      <a href="/" class="flex items-center gap-2">
        <div class="w-7 h-7 rounded-md bg-gradient-to-br from-stone-800 to-stone-900 dark:from-stone-200 dark:to-stone-300 flex items-center justify-center">
          <svg class="w-3.5 h-3.5 text-white dark:text-stone-900 ml-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <span class="text-lg font-serif font-bold text-text-primary dark:text-white">v<span class="text-stone-400 dark:text-stone-500">/</span></span>
      </a>
      <button class="text-stone-500 dark:text-stone-400">
        <span class="material-symbols-outlined">menu</span>
      </button>
    </header>

    <div class="flex-1 overflow-y-auto">
      <div class="max-w-5xl mx-auto px-6 md:px-12 py-8 md:py-12">
        <!-- Top bar with back button and dark mode toggle -->
        <div class="flex items-center justify-between mb-8">
          <a href="/" class="inline-flex items-center gap-2 text-sm text-stone-500 hover:text-text-primary dark:hover:text-stone-200 transition-colors group">
            <span class="material-symbols-outlined text-[18px] group-hover:-translate-x-1 transition-transform">arrow_back</span>
            <span class="font-serif italic">Go back</span>
          </a>

          <!-- Dark mode toggle -->
          <div class="flex items-center gap-2">
            <span class="material-symbols-outlined text-[18px] text-amber-500 dark:text-stone-500 transition-colors">light_mode</span>
            <button
              id="dark-mode-toggle"
              class="bg-stone-200 dark:bg-stone-700 relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-stone-400 focus:ring-offset-2 dark:focus:ring-offset-stone-900"
              title="Toggle dark mode"
            >
              <span aria-hidden="true" class="translate-x-0 dark:translate-x-5 pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
            </button>
            <span class="material-symbols-outlined text-[18px] text-stone-400 dark:text-indigo-400 transition-colors">dark_mode</span>
          </div>
        </div>

        <!-- Video player -->
        <div class="relative aspect-video w-full overflow-hidden rounded-lg bg-stone-900 shadow-hover mb-8 ring-1 ring-stone-200 dark:ring-stone-800">
          <div id="player" class="w-full h-full"></div>
        </div>

        <!-- Video info -->
        <div class="mb-10">
          <h1 class="text-3xl md:text-4xl font-serif font-semibold text-text-primary dark:text-stone-100 tracking-tight mb-4">
            {talk.title}
          </h1>
          <div class="flex flex-wrap items-center gap-4 text-sm text-stone-500 dark:text-stone-400">
            <span class="font-semibold uppercase tracking-wider text-xs">{talk.speaker}</span>
            <span class="text-stone-300 dark:text-stone-600">•</span>
            <span class="font-serif italic">{talk.year}</span>
            <span class="text-stone-300 dark:text-stone-600">•</span>
            <span id="duration" class="font-serif italic">—</span>
          </div>
          <div class="mt-4 flex flex-wrap gap-2">
            {talk.tags.map(tag => (
              <a
                href={`/?tag=${encodeURIComponent(tag)}`}
                class="inline-block px-3 py-1 rounded border border-stone-200 dark:border-stone-700 bg-stone-50 dark:bg-stone-800/50 text-xs font-sans font-medium text-stone-500 dark:text-stone-400 hover:border-primary dark:hover:border-stone-500 hover:text-text-primary dark:hover:text-stone-200 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>

        <!-- Discussion section with Giscus -->
        <div class="border-t border-stone-200 dark:border-stone-800 pt-10">
          <div class="flex items-center gap-3 mb-8">
            <span class="material-symbols-outlined text-stone-400 dark:text-stone-500 text-[22px]">forum</span>
            <h2 class="text-xl font-serif font-medium text-text-primary dark:text-stone-100">Discussion</h2>
          </div>

          <!-- Giscus container -->
          <div id="giscus-container" class="giscus-frame min-h-[300px] rounded-lg overflow-hidden">
            <!-- Giscus will be loaded here -->
            <div id="giscus-loading" class="flex flex-col items-center justify-center py-16 text-stone-400 dark:text-stone-500">
              <span class="material-symbols-outlined text-[32px] mb-3 animate-pulse">chat_bubble</span>
              <p class="text-sm font-serif italic">Loading discussion...</p>
            </div>
          </div>

          <!-- Giscus fallback info -->
          <div id="giscus-info" class="hidden mt-6 p-4 rounded-lg bg-stone-50 dark:bg-stone-900/50 border border-stone-200 dark:border-stone-800">
            <p class="text-sm text-stone-500 dark:text-stone-400">
              <span class="font-medium">Note:</span> Comments are powered by
              <a href="https://giscus.app" target="_blank" rel="noopener" class="underline hover:text-text-primary dark:hover:text-stone-200 transition-colors">Giscus</a>.
              Sign in with GitHub to join the discussion.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script define:vars={{ videoId: id, title: talk.title, giscusConfig }}>
    window.__currentVideo = { id: videoId, title: title };
    window.__giscusConfig = giscusConfig;
  </script>

  <script>
    // YouTube IFrame API
    declare global {
      interface Window {
        onYouTubeIframeAPIReady: () => void;
        YT: any;
        __currentVideo: { id: string; title: string };
        __giscusConfig: { repo: string; repoId: string; category: string; categoryId: string };
      }
    }

    // Dark mode toggle
    const toggle = document.getElementById('dark-mode-toggle');
    toggle?.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('darkMode', isDark ? 'true' : 'false');

      // Reload Giscus with new theme
      reloadGiscus();
    });

    // Restore dark mode preference
    if (localStorage.getItem('darkMode') === 'false') {
      document.documentElement.classList.remove('dark');
    }

    // Giscus configuration and loading
    function loadGiscus() {
      const container = document.getElementById('giscus-container');
      const loading = document.getElementById('giscus-loading');
      const info = document.getElementById('giscus-info');
      const config = window.__giscusConfig;

      if (!container) return;

      // Skip if Giscus not configured
      if (!config.repo || !config.repoId || !config.categoryId) {
        if (loading) {
          loading.innerHTML = `
            <span class="material-symbols-outlined text-[32px] mb-3 text-stone-300 dark:text-stone-600">chat_bubble</span>
            <p class="text-sm font-serif italic">Comments not configured</p>
            <p class="text-xs text-stone-400 dark:text-stone-600 mt-2">Set up Giscus in .env file</p>
          `;
        }
        return;
      }

      const isDark = document.documentElement.classList.contains('dark');
      const videoId = window.__currentVideo.id;

      // Create Giscus script
      const script = document.createElement('script');
      script.src = 'https://giscus.app/client.js';
      script.setAttribute('data-repo', config.repo);
      script.setAttribute('data-repo-id', config.repoId);
      script.setAttribute('data-category', config.category);
      script.setAttribute('data-category-id', config.categoryId);
      script.setAttribute('data-mapping', 'specific');
      script.setAttribute('data-term', videoId);
      script.setAttribute('data-strict', '0');
      script.setAttribute('data-reactions-enabled', '1');
      script.setAttribute('data-emit-metadata', '0');
      script.setAttribute('data-input-position', 'top');
      script.setAttribute('data-theme', isDark ? 'dark_dimmed' : 'light');
      script.setAttribute('data-lang', 'en');
      script.setAttribute('data-loading', 'lazy');
      script.crossOrigin = 'anonymous';
      script.async = true;

      // Hide loading indicator when Giscus loads
      script.onload = () => {
        if (loading) loading.classList.add('hidden');
        if (info) info.classList.remove('hidden');
      };

      container.appendChild(script);
    }

    function reloadGiscus() {
      const container = document.getElementById('giscus-container');
      if (!container) return;

      // Remove existing Giscus iframe
      const existingFrame = container.querySelector('iframe.giscus-frame');
      if (existingFrame) {
        existingFrame.remove();
      }

      // Remove existing script
      const existingScript = container.querySelector('script');
      if (existingScript) {
        existingScript.remove();
      }

      // Show loading again
      const loading = document.getElementById('giscus-loading');
      if (loading) loading.classList.remove('hidden');

      // Reload with new theme
      loadGiscus();
    }

    // Load Giscus on page load
    loadGiscus();

    // Load YouTube API
    const tag = document.createElement('script');
    tag.src = 'https://www.youtube.com/iframe_api';
    const firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode?.insertBefore(tag, firstScriptTag);

    let player: any;

    window.onYouTubeIframeAPIReady = function() {
      const videoId = window.__currentVideo.id;

      player = new window.YT.Player('player', {
        videoId: videoId,
        playerVars: {
          autoplay: 0,
          modestbranding: 1,
          rel: 0
        },
        events: {
          onReady: onPlayerReady,
          onStateChange: onPlayerStateChange
        }
      });
    };

    function formatDuration(seconds: number): string {
      const h = Math.floor(seconds / 3600);
      const m = Math.floor((seconds % 3600) / 60);
      const s = Math.floor(seconds % 60);
      if (h > 0) {
        return `${h}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
      }
      return `${m}:${s.toString().padStart(2, '0')}`;
    }

    function onPlayerReady(event: any) {
      const videoId = window.__currentVideo.id;
      const duration = player.getDuration();

      // Store duration in localStorage
      const stored = JSON.parse(localStorage.getItem('videoMetadata') || '{}');
      if (!stored[videoId]) {
        stored[videoId] = {};
      }
      stored[videoId].duration = duration;
      localStorage.setItem('videoMetadata', JSON.stringify(stored));

      // Display duration
      const durationEl = document.getElementById('duration');
      if (durationEl && duration) {
        durationEl.textContent = formatDuration(duration);
      }

      // Restore progress if any
      if (stored[videoId]?.progress && stored[videoId].progress > 5) {
        player.seekTo(stored[videoId].progress, true);
      }

      // Store last viewed
      localStorage.setItem('lastViewed', JSON.stringify({
        id: videoId,
        title: window.__currentVideo.title
      }));
    }

    function onPlayerStateChange(event: any) {
      const videoId = window.__currentVideo.id;

      // Save progress periodically while playing
      if (event.data === window.YT.PlayerState.PLAYING) {
        const progressInterval = setInterval(() => {
          if (player && player.getPlayerState() === window.YT.PlayerState.PLAYING) {
            const currentTime = player.getCurrentTime();
            const stored = JSON.parse(localStorage.getItem('videoMetadata') || '{}');
            if (!stored[videoId]) stored[videoId] = {};
            stored[videoId].progress = currentTime;
            localStorage.setItem('videoMetadata', JSON.stringify(stored));
          } else {
            clearInterval(progressInterval);
          }
        }, 5000);
      }

      // Mark as watched when video ends
      if (event.data === window.YT.PlayerState.ENDED) {
        const stored = JSON.parse(localStorage.getItem('videoMetadata') || '{}');
        if (!stored[videoId]) stored[videoId] = {};
        stored[videoId].watched = true;
        stored[videoId].progress = stored[videoId].duration;
        localStorage.setItem('videoMetadata', JSON.stringify(stored));
      }
    }
  </script>
</Layout>

<style>
  /* Giscus iframe styling */
  .giscus-frame :global(iframe.giscus-frame) {
    width: 100% !important;
  }
</style>
