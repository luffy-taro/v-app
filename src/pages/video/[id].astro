---
import fs from 'node:fs';
import yaml from 'js-yaml';
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import type { Talk } from '../../lib/types';
import { extractVideoId } from '../../lib/youtube';

// Load talks from YAML
const talksFile = fs.readFileSync('data/talks.yaml', 'utf8');
const talks = yaml.load(talksFile) as Talk[];

// Generate static paths for all videos
export function getStaticPaths() {
  const talksFile = fs.readFileSync('data/talks.yaml', 'utf8');
  const talks = yaml.load(talksFile) as Array<{ url: string }>;

  return talks.map(talk => {
    const id = talk.url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([\w-]+)/)?.[1];
    return { params: { id } };
  }).filter(p => p.params.id);
}

const { id } = Astro.params;

// Find the talk by video ID
const talk = talks.find(t => extractVideoId(t.url) === id);

if (!talk) {
  return Astro.redirect('/');
}

// Build tag list with counts for sidebar
const tagCounts = new Map<string, number>();
talks.forEach(t => {
  t.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});
const tags = Array.from(tagCounts.entries())
  .map(([name, count]) => ({ name, count }))
  .sort((a, b) => b.count - a.count);
---

<Layout title={`${talk.title} - The Archive`}>
  <Sidebar tags={tags} totalCount={talks.length} />

  <main class="flex-1 flex flex-col h-full overflow-hidden relative bg-background-light dark:bg-background-dark">
    <!-- Mobile header -->
    <header class="md:hidden flex items-center justify-between px-6 py-4 bg-card-light/95 dark:bg-card-dark/95 backdrop-blur-sm border-b border-border-light dark:border-border-dark z-10 sticky top-0">
      <a href="/" class="text-lg font-serif font-bold text-text-primary dark:text-white">The Archive</a>
      <button class="text-stone-500 dark:text-stone-400">
        <span class="material-symbols-outlined">menu</span>
      </button>
    </header>

    <div class="flex-1 overflow-y-auto">
      <div class="max-w-5xl mx-auto px-6 md:px-12 py-8 md:py-12">
        <!-- Back button -->
        <a href="/" class="inline-flex items-center gap-2 text-sm text-stone-500 hover:text-text-primary dark:hover:text-stone-200 transition-colors mb-8 group">
          <span class="material-symbols-outlined text-[18px] group-hover:-translate-x-1 transition-transform">arrow_back</span>
          <span class="font-serif italic">Back to archive</span>
        </a>

        <!-- Video player -->
        <div class="relative aspect-video w-full overflow-hidden rounded-lg bg-stone-900 shadow-hover mb-8">
          <div id="player" class="w-full h-full"></div>
        </div>

        <!-- Video info -->
        <div class="mb-8">
          <h1 class="text-3xl md:text-4xl font-serif font-semibold text-text-primary dark:text-stone-100 tracking-tight mb-4">
            {talk.title}
          </h1>
          <div class="flex flex-wrap items-center gap-4 text-sm text-stone-500 dark:text-stone-400">
            <span class="font-semibold uppercase tracking-wider text-xs">{talk.speaker}</span>
            <span class="text-stone-300 dark:text-stone-600">•</span>
            <span class="font-serif italic">{talk.year}</span>
            <span class="text-stone-300 dark:text-stone-600">•</span>
            <span id="duration" class="font-serif italic">—</span>
          </div>
          <div class="mt-4 flex flex-wrap gap-2">
            {talk.tags.map(tag => (
              <a
                href={`/?tag=${encodeURIComponent(tag)}`}
                class="inline-block px-3 py-1 rounded border border-stone-200 dark:border-stone-700 bg-stone-50 dark:bg-stone-800/50 text-xs font-sans font-medium text-stone-500 dark:text-stone-400 hover:border-primary dark:hover:border-stone-500 hover:text-text-primary dark:hover:text-stone-200 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>

        <!-- Comments placeholder -->
        <div class="border-t border-stone-200 dark:border-stone-800 pt-8">
          <h2 class="text-xl font-serif font-medium text-text-primary dark:text-stone-100 mb-6">Discussion</h2>
          <div id="giscus-container" class="min-h-[200px]">
            <p class="text-sm text-stone-500 dark:text-stone-400 italic">Comments will appear here (Giscus integration pending)</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script define:vars={{ videoId: id, title: talk.title }}>
    window.__currentVideo = { id: videoId, title: title };
  </script>

  <script>
    // YouTube IFrame API
    declare global {
      interface Window {
        onYouTubeIframeAPIReady: () => void;
        YT: any;
        __currentVideo: { id: string; title: string };
      }
    }

    // Load YouTube API
    const tag = document.createElement('script');
    tag.src = 'https://www.youtube.com/iframe_api';
    const firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode?.insertBefore(tag, firstScriptTag);

    let player: any;

    window.onYouTubeIframeAPIReady = function() {
      const videoId = window.__currentVideo.id;

      player = new window.YT.Player('player', {
        videoId: videoId,
        playerVars: {
          autoplay: 0,
          modestbranding: 1,
          rel: 0
        },
        events: {
          onReady: onPlayerReady,
          onStateChange: onPlayerStateChange
        }
      });
    };

    function formatDuration(seconds: number): string {
      const h = Math.floor(seconds / 3600);
      const m = Math.floor((seconds % 3600) / 60);
      const s = Math.floor(seconds % 60);
      if (h > 0) {
        return `${h}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
      }
      return `${m}:${s.toString().padStart(2, '0')}`;
    }

    function onPlayerReady(event: any) {
      const videoId = window.__currentVideo.id;
      const duration = player.getDuration();

      // Store duration in localStorage
      const stored = JSON.parse(localStorage.getItem('videoMetadata') || '{}');
      if (!stored[videoId]) {
        stored[videoId] = {};
      }
      stored[videoId].duration = duration;
      localStorage.setItem('videoMetadata', JSON.stringify(stored));

      // Display duration
      const durationEl = document.getElementById('duration');
      if (durationEl && duration) {
        durationEl.textContent = formatDuration(duration);
      }

      // Restore progress if any
      if (stored[videoId]?.progress && stored[videoId].progress > 5) {
        player.seekTo(stored[videoId].progress, true);
      }

      // Store last viewed
      localStorage.setItem('lastViewed', JSON.stringify({
        id: videoId,
        title: window.__currentVideo.title
      }));
    }

    function onPlayerStateChange(event: any) {
      const videoId = window.__currentVideo.id;

      // Save progress periodically while playing
      if (event.data === window.YT.PlayerState.PLAYING) {
        const progressInterval = setInterval(() => {
          if (player && player.getPlayerState() === window.YT.PlayerState.PLAYING) {
            const currentTime = player.getCurrentTime();
            const stored = JSON.parse(localStorage.getItem('videoMetadata') || '{}');
            if (!stored[videoId]) stored[videoId] = {};
            stored[videoId].progress = currentTime;
            localStorage.setItem('videoMetadata', JSON.stringify(stored));
          } else {
            clearInterval(progressInterval);
          }
        }, 5000);
      }

      // Mark as watched when video ends
      if (event.data === window.YT.PlayerState.ENDED) {
        const stored = JSON.parse(localStorage.getItem('videoMetadata') || '{}');
        if (!stored[videoId]) stored[videoId] = {};
        stored[videoId].watched = true;
        stored[videoId].progress = stored[videoId].duration;
        localStorage.setItem('videoMetadata', JSON.stringify(stored));
      }
    }
  </script>
</Layout>
